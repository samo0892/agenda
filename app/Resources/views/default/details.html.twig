{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block title %}Details{% endblock %}

{% block head %}{% endblock %}

{% block body %}
    {% include 'default/menu.html.twig' %}
    <div class="col-md-8">
        <div class="container" style="margin-top: 100px; margin-right: 100px">
            <div class="container">
                <div class="login-container">
                    <div id="output"></div>
                    <div class="avatar"></div>
                    <div class="form-box">
                        <h2>Details des Meetings</h2>    
                        {{ form_start(form) }}
                        {{ form_row(form.name) }}
                        {{ form_row(form.date) }}
                        {{ form_row(form.startTime) }}
                        {{ form_row(form.endTime) }}
                        {{ form_row(form.place) }}
                        {{ form_row(form.emails) }}
                        {{ form_row(form.type) }}
                        {% for meeting_file in meeting_files  %}
                            {{ form_row(form.file) }}
                        {% endfor %}
                        {{ form_end(form) }}<br /><br />
                        <a href="{{ path('actual_meetings') }}"><button class="btn-default btn">Zur√ºck</button></a>
                    </div>

                    {% include 'default/flash_messages.html.twig' %}

                </div>
            </div>
        </div>
    </div>
{% endblock %}
