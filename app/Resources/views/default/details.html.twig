{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block title %}Details{% endblock %}

{% block head %}{% endblock %}

{% block body %}


        <div class="col-md-8">
            <div class="container" style="margin-top: 100px; margin-right: 100px">
                <div class="container">
                    <div class="login-container">
                        <div id="output"></div>
                        <div class="avatar"></div>
                        <div class="form-box">
                            <h2>Details des Meetings</h2>    
                            {{ form_start(form) }}
                            {{ form_row(form.meeting_name) }}
                            {{ form_row(form.date) }}
                            {{ form_row(form.time) }}
                            {{ form_row(form.place) }}
                            {{ form_row(form.objective) }}
                            {{ form_row(form.isAttending) }}
                            {{ form_row(form.file) }}
                            {{ form_end(form) }}<br /><br />
                            <a href="{{ path('actual_meetings') }}"><button class="btn-default btn">Zur√ºck</button></a>
                        </div>
                        
                            {% for flash_message in app.session.flashBag.get('notice') %}
                                <div class="alert alert-success" role="alert">
                                <div class="flash-notice">
                                    {{ flash_message }}
                                </div>
                                </div>
                            {% endfor %}
                            
                            {% for flash_message in app.session.flashBag.get('error') %}
                                <div class="alert alert-danger" role="alert">
                                <div class="flash-notice">
                                    {{ flash_message }}
                                </div>
                                </div>
                            {% endfor %}
                        
                    </div>
                </div>
            </div>
        </div>
    </div> 
{% endblock %}
