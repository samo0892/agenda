{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block title %}Details{% endblock %}

{% block head %}{% endblock %}

{% block body %}


        <div class="col-md-8">
            <div class="container" style="margin-top: 100px; margin-right: 100px">
                <div class="container">
                    <div class="login-container">
                        <div id="output"></div>
                        <div class="avatar"></div>
                        <div class="form-box">
                            <h2>Details des abgeschlossenen Meetings</h2>    
                            {{ form_start(form) }}
                            {{ form_row(form.name) }}
                            {{ form_row(form.date) }}
                            {{ form_row(form.startTime) }}
                            {{ form_row(form.endTime) }}
                            {{ form_row(form.place) }}
                            {{ form_row(form.emails) }}
                            {{ form_row(form.type) }}
                            {{ form_row(form.uploaded_files) }}
                            {{ form_end(form) }}
                            <a href="loeschen?id={{id}}"><button class="btn-danger btn">Löschen</button></a> <a href="protokoll_anzeigen?id={{id}}"><button class="btn-info btn">Protokoll anzeigen</button></a>
                            <br /><br />
                            <a href="{{ path('completed_meetings') }}"><button class="btn-default btn">Zurück</button></a>
                        </div>
                        
                            {% for flash_message in app.session.flashBag.get('notice') %}
                                <div class="alert alert-success" role="alert">
                                <div class="flash-notice">
                                    {{ flash_message }}
                                </div>
                                </div>
                            {% endfor %}
                            
                            {% for flash_message in app.session.flashBag.get('error') %}
                                <div class="alert alert-danger" role="alert">
                                <div class="flash-notice">
                                    {{ flash_message }}
                                </div>
                                </div>
                            {% endfor %}
                        
                    </div>
                </div>
            </div>
        </div>
{% endblock %}

